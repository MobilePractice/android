<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#585858">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@color/winered"/>

        <RelativeLayout
            android:id="@+id/myStorePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/desaturatedwinered">
            <ImageView
                android:id="@+id/myLocationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mylocation"
                android:layout_alignParentLeft="true"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/myLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myLocationImage"
                android:textColor="#8A2908"/>
            <TextView
                android:id="@+id/myLocationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myLocationName"
                android:layout_toRightOf="@id/myLocationImage"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/myLocationPlaceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myLocationTime"
                android:layout_toRightOf="@id/myLocationImage"
                android:text="@string/place_order"
                android:textColor="#000000"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/otherStores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other_stores"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/desaturatedwinered"/>

        <RelativeLayout
            android:id="@+id/otherStorePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/desaturatedwinered">
            <TextView
                android:id="@+id/distance_1st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/name_1st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@id/distance_1st"
                android:padding="3dp"/>
            <View
                style="@style/DividerStyle"
                android:layout_below="@id/name_1st"></View>
            <TextView
                android:id="@+id/distance_2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/distance_1st"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/name_2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@id/distance_2nd"
                android:layout_below="@id/name_1st"
                android:padding="3dp"/>
            <View
                style="@style/DividerStyle"
                android:layout_below="@id/name_2nd"></View>
            <TextView
                android:id="@+id/distance_3rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/distance_2nd"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/name_3rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@id/distance_3rd"
                android:layout_below="@id/name_2nd"
                android:padding="3dp"/>
            <View
                style="@style/DividerStyle"
                android:layout_below="@id/name_3rd"></View>
            <TextView
                android:id="@+id/findMoreStores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_below="@id/name_3rd"
                android:layout_centerHorizontal="true"
                android:text="@string/find_more_stores"
                android:padding="5dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/wine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wine"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/winesForMixing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wines_for_mixing"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@drawable/wine"/>

        <TextView
            android:id="@+id/spirits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spirits"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/summerCeasars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summer_ceasars"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@drawable/spirit"/>

        <TextView
            android:id="@+id/beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beer"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/crispRadlers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crisp_radlers"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@drawable/beer"/>

    </LinearLayout>
</ScrollView><!-- From: file:/Users/mike.roelens/dev/git/mobile/drink-android/drink-app/app/src/main/res/layout/hpage.xml -->